#!/usr/bin/env ruby

require_relative '../config/environment'



puts "Welcome to Tic Tac Toe!"
puts "Enter 0 for a game between AI's"
puts "Enter 1 for a game between you and AI"
puts "Enter 2 for a game between you and your real life friend sitting next to you"

input = gets.strip

if input == 0
  Game.new(player_1=Players::Computer.new("X"), player_2=Players::Computer.new("O"))
elsif input == 1
  Game.new(player_2=Players::Computer.new("O"))
elsif input == 2
  Game.new

end
end
